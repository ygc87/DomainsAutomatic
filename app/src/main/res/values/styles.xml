<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_function_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_60_dp</item>
        <item name="android:layout_marginLeft">@dimen/dimens_20_dp</item>
        <item name="android:layout_marginRight">@dimen/dimens_20_dp</item>
        <item name="android:layout_marginTop">@dimen/dimens_5_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_5_dp</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
